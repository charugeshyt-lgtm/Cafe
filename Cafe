<script>
let total = 0;

function animateValue(start, end, duration) {
    let startTime = null;
    function animation(currentTime) {
        if (!startTime) startTime = currentTime;
        const progress = currentTime - startTime;
        const value = Math.floor(progress / duration * (end - start) + start);
        document.getElementById("totalPrice").textContent = value;
        if (progress < duration) {
            requestAnimationFrame(animation);
        } else {
            document.getElementById("totalPrice").textContent = end;
        }
    }
    requestAnimationFrame(animation);
}

function addOrder(item, price, button){
    const quantity = button.previousElementSibling.value;
    const orderList = document.getElementById("orderList");

    const li = document.createElement("li");
    li.textContent = item + " x " + quantity + " = ₹" + (price * quantity);
    orderList.appendChild(li);

    let oldTotal = total;
    total += price * quantity;
    animateValue(oldTotal, total, 500);
}
</script>

